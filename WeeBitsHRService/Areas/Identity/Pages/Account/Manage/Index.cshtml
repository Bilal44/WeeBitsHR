@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<br />

<div class="row">
	<div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12">
			<div class="form-floating">
				<input asp-for="Model.Email" class="form-control" disabled />
				<label asp-for="Model.Email" class="control-label"></label>
			</div>
            <div class="form-floating">
					<input asp-for="Model.Title" class="form-control" disabled />
					<label asp-for="Model.Title" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.FirstName" class="form-control" disabled />
					<label asp-for="Model.FirstName" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.LastName" class="form-control" disabled />
					<label asp-for="Model.LastName" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.AddressLine1" class="form-control" disabled />
					<label asp-for="Model.AddressLine1" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.AddressLine2" class="form-control" disabled />
					<label asp-for="Model.AddressLine2" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.Town" class="form-control" disabled />
					<label asp-for="Model.Town" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.PostCode" class="form-control" disabled />
					<label asp-for="Model.PostCode" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.Country" class="form-control" disabled />
					<label asp-for="Model.Country" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.PhoneNumber" class="form-control" disabled />
					<label asp-for="Model.PhoneNumber" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.PayrollNumber" class="form-control" disabled />
					<label asp-for="Model.PayrollNumber" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.Position" class="form-control" disabled />
					<label asp-for="Model.Position" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.Salary" class="form-control" disabled />
					<label asp-for="Model.Salary" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.DOB" class="form-control" disabled />
					<label asp-for="Model.DOB" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.Gender" class="form-control"  disabled></input>
					<label asp-for="Model.Gender" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.JoinDate" class="form-control" disabled />
					<label asp-for="Model.JoinDate" class="control-label"></label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.JobCategory.Name" class="form-control" disabled></input>
					<label asp-for="Model.JobCategory" class="control-label">Job Category</label>
				</div>
				<div class="form-floating">
					<input asp-for="Model.Branch.Region" class="form-control" disabled></input>
					<label asp-for="Model.Branch" class="control-label">Branch Region</label>
				</div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
