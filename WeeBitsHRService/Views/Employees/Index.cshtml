@{
	ViewData["Title"] = "Human Resource Dashboard";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />

<h2 class="text-center pt-2">Monthly KPI</h2>
<div class="row kpi">
	<div class="col-xl-3 col-sm-6 col-12">
		<div class="card">
		  <div class="card-content">
			<div class="card-body">
			  <div class="d-flex">
				<div class="panel-icon flex-grow-1">
				  <i class="fas fa-3x fa-chart-pie"></i>
				</div><div class="text-end">
				  <h3 class="primary">72.49% <span class="text-success">(+3.14%)</span></h3>
				  <span>Training Effectiveness</span>
				</div>				
			  </div>
			  <div class="progress mt-1 mb-0" style="height: 10px;">
				<div class="progress-bar bg-success" role="progressbar" style="width: 72.49%" aria-valuenow="72.49" aria-valuemin="0" aria-valuemax="100"></div>
			  </div>
			</div>
		  </div>
		</div>
	  </div>

	  	<div class="col-xl-3 col-sm-6 col-12">
		<div class="card">
		  <div class="card-content">
			<div class="card-body">
			  <div class="d-flex">
				<div class="panel-icon flex-grow-1">
					<i class="far fa-3x fa-calendar-minus"></i>
				</div>
				<div class="text-end">
				  <h3 class="primary">2.83% <span class="text-warning">(+0.04%)</span></h3>
				  <span>Absence Rate</span>
				</div>				
			  </div>
			 <div class="progress mt-1 mb-0 bg-transparent" style="height: 10px;"></div>
			</div>
		  </div>
		</div>
	  </div>

	  	<div class="col-xl-3 col-sm-6 col-12">
		<div class="card">
		  <div class="card-content">
			<div class="card-body">
			  <div class="d-flex">
				<div class="panel-icon flex-grow-1">
				  <i class="fas fa-3x fa-chart-line"></i>
				</div>
				<div class="text-end">
				  <h3 class="primary">£1,262.12 <span class="text-success">(-£32.42)</span></h3>
				  <span>Absence Cost</span>
				</div>				
			  </div>
			 <div class="progress mt-1 mb-0 bg-transparent" style="height: 10px;"></div>
			</div>
		  </div>
		</div>
	  </div>

	  	<div class="col-xl-3 col-sm-6 col-12">
		<div class="card">
		  <div class="card-content">
			<div class="card-body">
			  <div class="d-flex">
				<div class="panel-icon flex-grow-1">
				  <i class="far fa-3x fa-smile"></i>
				</div>
				<div class="text-end">
				  <h3 class="primary">68 <span class="text-danger">(-3)</span></h3>
				  <span>Employee Satisfaction Index</span>
				</div>				
			  </div>
			 <div class="progress mt-1 mb-0 bg-transparent" style="height: 10px;"></div>
			</div>
		  </div>
		</div>
	  </div>
</div>

<h1 class="text-center pt-3">Manager Menu</h1>
<div class="row pt-2">
  <center>
    <div class="col-xl-7 col-lg-12 col-md-12 col-sm-12 col-12">
      <div class="row">
        <div class="btn-panel">
          <a class="btn btn-primary btn-lg btn-panel" asp-controller="Employees" asp-action="All">
            <div class="card-body">
              <div class="d-flex justify-content-center">
                <div class="panel-icon">
                  <i class="fas fa-2x fa-users"></i>
                </div>
                <h2>View All Employee</h2>
              </div>
            </div>
          </a>
        </div>
      </div>
      <div class="row">
        <div class="col-xl-4 md-4 col-sm-6 col-12">
          <div class="btn-panel">
            <a class="btn btn-secondary btn-lg btn-panel" asp-controller="Employees" asp-action="Create">
              <div class="card-body">
                <div class="d-flex justify-content-center">
                  <div class="panel-icon">
                    <i class="fas fa-2x fa-plus"></i>
                  </div>
                  <h2>Add Employee</h2>
                </div>
              </div>
            </a>
          </div>
        </div>
        <div class="col-xl-4 md-4 col-sm-6 col-12">
          <div class="btn-panel">
            <a class="btn btn-secondary btn-lg btn-panel" asp-controller="Reports" asp-action="CurrentEmployees">
              <div class="card-body">
                <div class="d-flex justify-content-center">
                  <div class="panel-icon">
                    <i class="fas fa-2x fa-users"></i>
                  </div>
                  <h2>Current Employees</h2>
                </div>
              </div>
            </a>
          </div>
        </div>
        <div class="col-xl-4 md-4 col-sm-6 col-12">
          <div class="btn-panel">
            <a class="btn btn-secondary btn-lg btn-panel" asp-controller="Reports" asp-action="EmployeesDemographics" asp-route-gender="0" asp-route-start_age="21" asp-route-end_age="37">
              <div class="card-body">
                <div class="d-flex justify-content-center">
                  <div class="panel-icon">
                    <i class="fas fa-2x fa-table"></i>
                  </div>
                  <h2>Employees Statistics</h2>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xl-4 md-4 col-sm-6 col-12">
          <div class="btn-panel">
            <a class="btn btn-secondary btn-lg btn-panel" asp-controller="Reports" asp-action="AveragePayrate">
              <div class="card-body">
                <div class="d-flex justify-content-center">
                  <div class="panel-icon">
                    <i class="fas fa-2x fa-chart-bar"></i>
                  </div>
                  <h2>Average Payrate</h2>
                </div>
              </div>
            </a>
          </div>
        </div>
        <div class="col-xl-4 md-4 col-sm-6 col-12">
          <div class="btn-panel">
            <a class="btn btn-secondary btn-lg btn-panel" asp-controller="Reports" asp-action="AbsenteeProfile" asp-route-start_date="2021-01-01" asp-route-end_date="2021-07-07">
              <div class="card-body">
                <div class="d-flex justify-content-center">
                  <div class="panel-icon">
                    <i class="fas fa-2x fa-address-book"></i>
                  </div>
                  <h2>Absentee Profile</h2>
                </div>
              </div>
            </a>
          </div>
        </div>
        <div class="col-xl-4 md-4 col-sm-6 col-12">
          <div class="btn-panel">
            <a class="btn btn-secondary btn-lg btn-panel" asp-controller="Reports" asp-action="AnnualStaffTurnover" asp-route-year="2021">
              <div class="card-body">
                <div class="d-flex justify-content-center">
                  <div class="panel-icon">
                    <i class="fas fa-2x fa-people-arrows"></i>
                  </div>
                  <h2>Staff Turnover</h2>
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </center>
</div>