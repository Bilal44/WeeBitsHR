            @Html.DisplayNameFor(model => model.JobCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JobCategory.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Branch)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Branch.Region)
        </dd>
