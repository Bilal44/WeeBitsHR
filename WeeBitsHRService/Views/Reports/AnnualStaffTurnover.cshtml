@model WeeBitsHRService.ViewModels.AnnualTurnoverViewModel

<link rel="stylesheet" href="~/lib/plugins/datatables/dataTables.css" />
<link rel="stylesheet" href="~/lib/plugins/datatables/datatables-reports.min.css" />

<h1 class="text-center">Annual Staff Turnover for @Model.Year</h1>
<h2 class="text-center">For @(Model.Region != null ? Model.Region : "All Regions")</h2>

<hr />
<partial name="_StatusMessage" />
<br />
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.AverageNumberOfEmployees)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.NewEmployees)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EmployeesLeft)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.StaffTurnoverRatio)
			</th>
	</thead>
	<tbody>
		<tr>
			<td>
				@Html.DisplayFor(model => model.AverageNumberOfEmployees)
			</td>
			<td>
				@Html.DisplayFor(model => model.NewEmployees)
			</td>
			<td>
				@Html.DisplayFor(model => model.EmployeesLeft)
			</td>
			<td>
				@Html.DisplayFor(model => model.StaffTurnoverRatio)
			</td>
		</tr>
	</tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/plugins/datatables/dataTables.js"></script>
<script src="~/js/employees.js"></script>
